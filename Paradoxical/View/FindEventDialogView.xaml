<UserControl
    x:Class="Paradoxical.View.FindEventDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Paradoxical"
    xmlns:view="clr-namespace:Paradoxical.View"
    xmlns:viewmodel="clr-namespace:Paradoxical.ViewModel"
    xmlns:model="clr-namespace:Paradoxical.Model"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodel:FindEventDialogViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <UserControl.InputBindings>
        <KeyBinding
            Command="{Binding CloseCommand}"
            Gesture="ESC" />
    </UserControl.InputBindings>
    <StackPanel
        Margin="16">
        <TextBox
            Style="{DynamicResource MaterialDesignFilledTextBox}"
            Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            materialDesign:HintAssist.Hint="Filter"
            materialDesign:TextFieldAssist.HasClearButton="True" />
        <ScrollViewer
            Margin="0,20,0,0">
            <ListBox
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding Selected, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            d:DataContext="{d:DesignInstance model:ParadoxEvent}"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="80"
                                Style="{DynamicResource MaterialDesignButtonTextBlock}"
                                FontSize="24"
                                Text="{Binding Id}"
                                TextAlignment="Right" />
                            <TextBlock
                                Style="{DynamicResource MaterialDesignButtonTextBlock}"
                                FontSize="24"
                                Text=": " />
                            <TextBlock
                                Width="350"
                                Style="{DynamicResource MaterialDesignButtonTextBlock}"
                                FontSize="24"
                                Text="{Binding Title}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger
                        EventName="SelectionChanged">
                        <behaviors:InvokeCommandAction
                            Command="{Binding CloseCommand}" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ListBox>
        </ScrollViewer>
    </StackPanel>
</UserControl>
