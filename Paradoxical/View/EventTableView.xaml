<UserControl
    x:Class="Paradoxical.View.EventTableView"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:view="clr-namespace:Paradoxical.View"
    xmlns:viewmodel="clr-namespace:Paradoxical.ViewModel"
    xmlns:rules="clr-namespace:Paradoxical.ValidationRules"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance {x:Type viewmodel:EventTableViewModel}}"
    d:DesignHeight="450"
    d:DesignWidth="1600">

    <DockPanel>

        <ToolBarTray
            DockPanel.Dock="Top"
            Margin="20">
            <ToolBar
                ClipToBounds="False"
                Style="{StaticResource MaterialDesignToolBar}">

                <Button
                    Margin="4,0"
                    Command="{Binding CreateCommand}"
                    Content="{materialDesign:PackIcon Kind=Add}"
                    ToolTip="Create Event" />
               
                <Button
                    Margin="4,0"
                    Command="{Binding DuplicateCommand}"
                    CommandParameter="{Binding Selected}"
                    Content="{materialDesign:PackIcon Kind=ContentDuplicate}"
                    ToolTip="Duplicate Event" />

                <Button
                    Margin="4,0"
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding Selected}"
                    Content="{materialDesign:PackIcon Kind=Remove}"
                    ToolTip="Delete Event" />

                <Separator />

                <TextBox
                    Width="300"
                    Margin="4,0"
                    Style="{DynamicResource MaterialDesignFilledTextBox}"
                    materialDesign:HintAssist.Hint="Filter Events ..."
                    materialDesign:TextFieldAssist.HasClearButton="True" />

                <Button
                    Margin="4,0"
                    Content="{materialDesign:PackIcon Kind=Search}"
                    ToolTip="Find Event" />

            </ToolBar>
        </ToolBarTray>

        <DataGrid
            Margin="20"
            BorderBrush="Gray"
            BorderThickness="1"
            ItemsSource="{Binding CurrentContext.Events}"
            SelectedItem="{Binding Selected}"
            SelectionMode="Single"
            SelectionUnit="FullRow"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False">

            <DataGrid.Columns>

                <DataGridTextColumn
                    Header="ID"
                    Binding="{Binding Id}"
                    IsReadOnly="True" />

                <DataGridTextColumn
                    Header="Name"
                    MinWidth="250"
                    MaxWidth="500">
                    <DataGridTextColumn.Binding>
                        <Binding
                            Path="Name"
                            Mode="TwoWay"
                            UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <rules:RequiredRule
                                    ValidatesOnTargetUpdated="True" />
                                <rules:NameRule
                                    ValidatesOnTargetUpdated="True" />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Header="Title"
                    Width="*"
                    MinWidth="400"
                    MaxWidth="800"
                    Binding="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ElementStyle="{StaticResource DataGridWrappingTextBlock}"
                    EditingElementStyle="{StaticResource DataGridWrappingTextBox}" />

                <DataGridTextColumn
                    Header="Description"
                    Width="*"
                    MinWidth="400"
                    MaxWidth="800"
                    Binding="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ElementStyle="{StaticResource DataGridWrappingTextBlock}"
                    EditingElementStyle="{StaticResource DataGridWrappingTextBox}" />

                <DataGridTextColumn
                    Header="Theme"
                    MinWidth="250"
                    MaxWidth="500"
                    Binding="{Binding Theme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridTextColumn
                    Header="Weight"
                    MinWidth="200"
                    MaxWidth="400">
                    <DataGridTextColumn.Binding>
                        <Binding
                            Path="Weight"
                            Mode="TwoWay"
                            UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <rules:RequiredRule
                                    ValidatesOnTargetUpdated="True" />
                            </Binding.ValidationRules>
                        </Binding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>

                    <DataGrid
                        Margin="20"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        ItemsSource="{Binding Options}"
                        SelectionMode="Single"
                        SelectionUnit="FullRow"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False">

                        <DataGrid.Columns>

                            <DataGridTextColumn
                                Header="Name"
                                MinWidth="600"
                                MaxWidth="800"
                                Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridTextColumn
                                Header="Tooltip"
                                MinWidth="600"
                                MaxWidth="800"
                                Binding="{Binding Tooltip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        </DataGrid.Columns>

                    </DataGrid>

                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

        </DataGrid>

    </DockPanel>

</UserControl>
